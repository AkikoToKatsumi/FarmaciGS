{
  "name": "farmacia-backend",
  "version": "1.0.0",
  "main": "server.ts",
  "type": "commonjs",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node src/server.ts",
    "build": "tsc",
    "build:prod": "tsc && npm prune --production",
    "dev:watch": "nodemon src/server.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev:ts": "nodemon --ext ts --exec ts-node src/server.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "format": "npm run prettier && npm run lint:fix",
    "format:check": "npm run prettier:check && npm run lint",
    "dev:server": "nodemon server.ts",
    "dev:client": "cd ../frontend && npm start",
    "dev:full": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:full:debug": "concurrently \"npm run dev:server\" \"npm run dev:client\" --kill-others-on-fail",
    "postinstall": "npm run build",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^12.4.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.5",
    "pdfkit": "^0.17.2",
    "pg": "^8.10.0",
    "puppeteer": "^24.12.1",
    "sqlite3": "^5.1.7",
    "uuid": "^11.1.0",
    "ws": "^8.18.3",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.25",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/moment": "^2.11.29",
    "@types/node": "^20.19.4",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^7.0.1",
    "@types/pdfkit": "^0.17.3",
    "@types/pg": "^8.15.4",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "body-parser": "^2.2.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.1",
    "express-validator": "^7.2.1",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  }
}
