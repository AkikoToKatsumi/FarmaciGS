{
  "name": "farmacia-gs-desktop",
  "version": "1.0.0",
  "description": "Sistema de Gestión Farmacéutica - Aplicación de Escritorio",
  "main": "electron/main.js",
  "homepage": "./",
  "private": true,
  "author": {
    "name": "Gabriela García & Dauris Santana",
    "email": "farmacia@ucateci.edu.do"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "electron": "npm run build && electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:pack": "npm run build && electron-builder",
    "electron:dist": "npm run build && electron-builder --publish=never",
    "electron:publish": "npm run build && electron-builder --publish=always",
    "postinstall": "powershell -ExecutionPolicy Bypass -File ..\\instalador.ps1"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.85.5",
    "axios": "^1.7.7",
    "better-sqlite3": "^12.4.1",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^5.0.0",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.1.4",
    "jspdf": "^3.0.1",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "^0.446.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.26.2",
    "recharts": "^3.1.2",
    "styled-components": "^6.1.13",
    "xlsx": "^0.18.5",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@types/jspdf": "^1.3.3",
    "@types/node": "^24.3.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/xlsx": "^0.0.35",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^37.3.1",
    "electron-builder": "^24.6.4",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "typescript": "^5.2.2",
    "vite": "^7.1.3",
    "wait-on": "^7.0.1"
  },
  "build": {
    "asar": false,
    "appId": "com.ucateci.farmacia-gs",
    "productName": "Farmacia GS",
    "directories": {
      "output": "dist-electron",
      "buildResources": "resources"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "bin/**/*",
      "../backup_db.dump"
    ],
    "extraResources": [
      {
        "from": "resources/backend",
        "to": "backend"
      },
      {
        "from": "database",
        "to": "database"
      },
      {
        "from": "bin",
        "to": "bin"
      },
      {
        "from": "../backup_db.dump",
        "to": "backup_db.dump"
      },
      {
        "from": "../../backend/dist",
        "to": "backend/dist"
      },
      {
        "from": "pgsql",
        "to": "pgsql"
      }
    ],
    "mac": {
      "category": "public.app-category.medical",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/imagenes/logob.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "useZip": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}